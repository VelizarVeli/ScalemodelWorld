@{
    ViewData["Title"] = "Purchased models";
    Layout = "~/Views/Shared/_Layout-Scalemodels.cshtml";
}
@using X.PagedList;
@using X.PagedList.Mvc.Common
@using X.PagedList.Mvc.Core
<br />
<br />
<h1 class="text-center">Wishlist</h1>
<hr class="bg-dark" style="height: 2px" />
<ul data-pagination>
    <li class="current">
        @Html.PagedListPager((IPagedList)ViewBag.OnePageOfProducts, page => Url.Action("AllWishlist", new { page = page }),
            new PagedListRenderOptions {
                LiElementClasses = new string[] { "ion-chevron-right" },
                PageClasses = new string[] { "page-link" }
            })
    </li>
</ul>
<div class="d-flex justify-content-between">
    <nav id="sidebar">
        <partial name="_SideBarPartial" />
        <ul class="list-unstyled CTAs">
            <li>
                <a asp-area="" asp-controller="Wishlist" asp-action="AddWishModel" class="btn btn-primary btn-lg">ADD NEW WISH</a>
            </li>
            <li>
                <a asp-controller="Users" asp-action="SeedWishlistView" class="btn btn-primary btn-lg">SEED DATA</a>
            </li>
        </ul>
    </nav>
    <table class="table table-hover">
        <thead>
        <tr class="row">
            <th scope="col" class="col-sm-1 d-flex justify-content-center"><h6>№</h6></th>
            <th scope="col" class="col-sm-1 d-flex justify-content-center"><h6>Box cover</h6></th>
            <th scope="col" class="col-sm-3 d-flex justify-content-left"><h6>Name</h6></th>
            <th scope="col" class="col-sm-2 d-flex justify-content-center"><h6>Manifacturer</h6></th>
            <th scope="col" class="col-sm-2 d-flex justify-content-right"><h6>Factory number</h6></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var product in ViewBag.OnePageOfProducts)
        {
            <tr class="row (@switch (product.Category.ToString())
                            {
                                case "Helicopters":
                                case "JetAircrafts":
                                    @:table-primary
                                    break;
                                case "SailingShips":
                                case "Submarines":
                                    @:table-secondary
                                    break;
                                case "TrackedMilitaryVehicles":
                                case "ScratchBuild":
                                    @:table-success
                                    break;
                                case "WheeledMilitaryVehicles":
                                case "SciFiSpace":
                                    @:table-danger
                                    break;
                                case "PropellerDrivenAircrafts":
                                    @:table-warning
                                    break;
                                case "Artillery":
                                case "Figures":
                                    @:table-info
                                    break;
                                case "CivilAirplanes":
                                case "CarsTrucksMotocycles":
                                    @:table-light
                                    break;
                                case "Diorama":
                                case "Architecture":
                                    @:table-white
                                    break;
                            })">
                <td class="col-sm-1 d-flex justify-content-center"><h6><small>@product.Number</small></h6></td>
                <td class="col-sm-1 d-flex justify-content-center">
                    <a href="@product.LinkToScalemates" target="_blank">
                        <img src="@product.BoxPicture" class="img-fluid" alt="Responsive image" />
                    </a>
                </td>
                <td class="col-sm-3 d-flex text-left"><h6><small>@product.Name</small></h6></td>
                <td class="col-sm-2 d-flex justify-content-center"><h6><small>@product.Manifacturer</small></h6></td>
                <td class="col-sm-2 d-flex text-right"><h6><small>@product.FactoryNumber</small></h6></td>
            </tr>
        }
        </tbody>
    </table>
</div>
<ul data-pagination>
    <li class="current">
        @Html.PagedListPager((IPagedList)ViewBag.OnePageOfProducts, page => Url.Action("AllWishlist", new { page = page }),
            new PagedListRenderOptions {
                LiElementClasses = new string[] { "ion-chevron-right" },
                PageClasses = new string[] { "page-link" }
            })
    </li>
</ul>