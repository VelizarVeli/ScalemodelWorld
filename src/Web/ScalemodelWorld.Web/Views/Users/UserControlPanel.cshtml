@using ScalemodelWorld.Web.ViewModels.Users.Enums
@model ScalemodelWorld.Web.ViewModels.Users.SeedDataViewModel
@{
    ViewData["Title"] = "Seed Data";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Seed Data</h1>
<form asp-action="Seeding">
    <hr />
    <div class="d-flex justify-content-around row">
        <div class="col-sm-6 mt-5">
            <div class="form-group">
                <label asp-for="PathToJSONFile"></label>
                <input asp-for="PathToJSONFile" class="form-control" />
                <span asp-validation-for="PathToJSONFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category">For which category you want to seed data?</label>
                <select asp-for="Category" asp-items="Html.GetEnumSelectList<Category>()" class="form-control"></select>
            </div>
        </div>
    </div>
    <div>
        <input type="submit" value="Seed" class="btn btn-primary" /> |
        <a asp-action="SeedPurchased">Seed Purchased</a>
    </div>
    <div>
        <input type="submit" value="Seed" class="btn btn-primary" /> |
        <a asp-action="SeedStarted">Seed Started</a>
    </div>
    <div>
        <input type="submit" value="Seed" class="btn btn-primary" /> |
        <a asp-action="SeedCompleted">Seed Completed</a>
    </div>
    <div>
        <input type="submit" value="Seed" class="btn btn-primary" /> |
        <a asp-action="SeedWishlist">Seed Wishlist</a>
    </div>
    <input type="submit" value="Seed" class="btn btn-primary" /> |
    <a asp-controller="PurchasedScalemodels" asp-action="AllPurchased">Back to Purchased</a>
</form>

<div class="d-flex pt-3 justify-content-around mt-5">
    <div><a asp-action="SeedPurchased" asp-r="@Model." class="btn btn-info" role="button">Start building</a></div>
    <div><a asp-action="SeedStarted" class="btn btn-info" role="button">Edit</a></div>
    <div><a asp-action="SeedCompleted" class="btn btn-info" role="button">Delete</a></div>
    <div><a asp-action="SeedWishlist" class="btn btn-info" role="button">Delete</a></div>
</div>