@model Scalemodel.Data.Models.Scalemodels.AvailableScalemodel

@{
    ViewData["Title"] = "AvailableDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-flex justify-content-around row">
    <div class="col-sm-6">
        <div class="card-body">
            <h2 class="card-title">@Model.Name</h2>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        </div>
        <dl class="list-group list-group-flush">
            <li class="list-group-item">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Scale)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Scale)
            </dd>
            </li>
            <li class="list-group-item">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Manifacturer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Manifacturer.Name)
            </dd>
            </li>
            <li class="list-group-item">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BestCompanyOffer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BestCompanyOffer)
            </dd>
            </li>
            <li class="list-group-item">
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateOfPurchase)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateOfPurchase)
            </dt>
            </li>
            <li class="list-group-item">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Place)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Place)
            </dd>
            </li>
            <li class="list-group-item">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Comments)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Comments)
            </dd>
            </li>
            <li class="list-group-item">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            </li>
            <li class="list-group-item">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.InfoHowTo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.InfoHowTo)
            </dd>
            </li>
            <li class="list-group-item">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CombinesWith)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CombinesWith)
            </dd>
            </li>
            <li class="list-group-item">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FactoryNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FactoryNumber)
            </dd>
            </li>
            <li class="list-group-item">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Number)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Number)
            </dd>
            </li>
            <li class="list-group-item">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LinkToScalemates)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LinkToScalemates)
            </dd>
            </li>
        </dl>
    </div>
    <div class="col-sm-6">
        <img src="@Model.BoxPicture" style="width: 100% \9; " class="img-fluid" alt="Responsive image">
    </div>
</div>
<div class="d-flex pt-3 justify-content-around">
    <div><a asp-action="StartModelBuild" asp-route-id="@Model.Id" class="btn btn-info" role="button">Start building</a></div>
    <div><a asp-action="AvailableDetails" asp-route-id="@Model.Id" class="btn btn-info" role="button">Edit</a></div>
    <div><a asp-action="AvailableDetails" asp-route-id="@Model.Id" class="btn btn-info" role="button">Delete</a></div>
</div>
<div>
    <a asp-action="Available">Back to Purchased</a>
</div>